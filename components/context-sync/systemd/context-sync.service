[Unit]
Description=Context Sync - Sync all connectors (Confluence, JIRA, etc.)
Documentation=file:///home/jwies/khan/james-in-a-box/components/context-sync/README.md

[Service]
Type=oneshot
WorkingDirectory=%h/khan/james-in-a-box/components/context-sync
Environment="PATH=%h/khan/james-in-a-box/components/context-sync/.venv/bin:/usr/local/bin:/usr/bin:/bin"
# Configuration is loaded from ~/.config/context-sync/.env by sync_all.py
ExecStart=%h/khan/james-in-a-box/components/context-sync/.venv/bin/python %h/khan/james-in-a-box/components/context-sync/sync_all.py

# After syncing context data, run analysis in JIB container
# Context watchers analyze Confluence docs and JIRA tickets for updates
# Uses --worktree for git isolation in case scripts create branches/commits
ExecStartPost=%h/khan/james-in-a-box/bin/jib --exec --worktree python3 %h/khan/james-in-a-box/jib-container/components/context-watcher/confluence-watcher.py
ExecStartPost=%h/khan/james-in-a-box/bin/jib --exec --worktree python3 %h/khan/james-in-a-box/jib-container/components/context-watcher/jira-watcher.py

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=context-sync

# Resource limits
Nice=10
IOSchedulingClass=2
IOSchedulingPriority=7

[Install]
WantedBy=default.target

