#!/bin/bash
# Enhanced Context Watcher control script - manages JIRA and Confluence watchers

WATCHER_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
JIRA_WATCHER="$WATCHER_DIR/jira-watcher.py"
CONFLUENCE_WATCHER="$WATCHER_DIR/confluence-watcher.py"
LOG_FILE="$HOME/sharing/tracking/enhanced-context-watcher.log"
PID_FILE="$HOME/sharing/tracking/enhanced-context-watcher.pid"

mkdir -p "$(dirname "$LOG_FILE")"

case "${1:-}" in
    start)
        if [ -f "$PID_FILE" ] && kill -0 $(cat "$PID_FILE") 2>/dev/null; then
            echo "Enhanced context watcher already running (PID: $(cat "$PID_FILE"))"
            exit 0
        fi

        echo "Starting enhanced context watcher (JIRA + Confluence)..."
        # Run watchers in loop (check every 5 minutes)
        (
            while true; do
                # Run JIRA watcher
                python3 "$JIRA_WATCHER" >> "$LOG_FILE" 2>&1

                # Run Confluence watcher
                python3 "$CONFLUENCE_WATCHER" >> "$LOG_FILE" 2>&1

                sleep 300  # 5 minutes
            done
        ) &
        echo $! > "$PID_FILE"
        echo "Enhanced context watcher started (PID: $!)"
        echo "  - JIRA ticket monitoring active"
        echo "  - Confluence doc monitoring active"
        ;;

    stop)
        if [ -f "$PID_FILE" ]; then
            PID=$(cat "$PID_FILE")
            if kill -0 "$PID" 2>/dev/null; then
                echo "Stopping enhanced context watcher (PID: $PID)..."
                kill "$PID"
                rm "$PID_FILE"
                echo "Enhanced context watcher stopped"
            else
                echo "Enhanced context watcher not running (stale PID file)"
                rm "$PID_FILE"
            fi
        else
            echo "Enhanced context watcher not running"
        fi
        ;;

    status)
        if [ -f "$PID_FILE" ] && kill -0 $(cat "$PID_FILE") 2>/dev/null; then
            echo "Enhanced context watcher is running (PID: $(cat "$PID_FILE"))"
            exit 0
        else
            echo "Enhanced context watcher is not running"
            exit 1
        fi
        ;;

    restart)
        $0 stop
        sleep 1
        $0 start
        ;;

    *)
        echo "Usage: $0 {start|stop|status|restart}"
        exit 1
        ;;
esac
