[Unit]
Description=JIB Conversation Analyzer
Documentation=https://github.com/jwiesebron/james-in-a-box
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot

# Execute the conversation analyzer directly from the repo
ExecStart=/usr/bin/python3 %h/khan/james-in-a-box/internal/conversation-analyzer.py --days 7

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=conversation-analyzer

# Restart behavior
Restart=no

[Install]
WantedBy=multi-user.target
