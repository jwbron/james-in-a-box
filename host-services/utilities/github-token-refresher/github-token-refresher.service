[Unit]
Description=GitHub Token Refresher - Keep GitHub App tokens fresh for jib containers
Documentation=file://%h/repos/james-in-a-box/host-services/utilities/github-token-refresher/README.md
After=network-online.target
Wants=network-online.target
OnFailure=service-failure-notify@%n.service

[Service]
Type=oneshot
WorkingDirectory=%h/repos/james-in-a-box

# Use the shared virtual environment
# --once flag runs a single refresh cycle and exits (for timer-based execution)
ExecStart=%h/repos/james-in-a-box/host-services/.venv/bin/python %h/repos/james-in-a-box/host-services/utilities/github-token-refresher/github-token-refresher.py --once

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=github-token-refresher

# Resource limits (this is a lightweight service)
Nice=15
IOSchedulingClass=3
IOSchedulingPriority=7

# Security hardening
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=%h/.jib-gateway
PrivateTmp=yes

[Install]
WantedBy=default.target
