[Unit]
Description=JIB Feature Analyzer ADR Watcher Timer - Every 15 minutes
Documentation=file://%h/khan/james-in-a-box/host-services/analysis/feature-analyzer/README.md

[Timer]
# Run every 15 minutes based on when the timer was last activated
# No OnBootSec to avoid immediate execution during setup
OnUnitActiveSec=15min
RandomizedDelaySec=60s

[Install]
WantedBy=timers.target
