JIRA_BASE_URL=""  # e.g., https://yourcompany.atlassian.net
JIRA_USERNAME=""  # Your email
JIRA_API_TOKEN=""
JIRA_JQL_QUERY=""  # e.g., project = ENG AND status != Done
